<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/vendors/css/bootstrap.css">
    <script src="/vendors/js/jquery.js"></script>
    <script src="/customs/js/index.js"></script>
    <script src="/customs/js/cart.js"></script>
    <script src="/customs/js/slider.js"></script>
    <script src="/customs/js/modal.js"></script>
    <link rel="stylesheet" href="/customs/css/index.css">
    <link rel="stylesheet" href="/customs/css/slider.css">
    <link rel="stylesheet" href="/customs/css/modal.css">
    <link rel="stylesheet" href="/customs/css/night-mode.css">
</head>
<body>
    <div>
        <label class="switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label>
        <span>Night Mode</span>
    </div>
    <div id="products-container" class="container">
        <h2 class="text-primary mb-4">Products</h2>

        <div class="row g-4">
            <% products.forEach(product => { %>
                <form action="/products/add-to-cart" method="POST" class="add-to-cart-form col">
                    <div class="card h-100">
                        <img src="/images/<%= product.image_path %>" class="card-img-top img-fluid image_card" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <p class="card-title text-truncate product_name" style="font-size: 0.85rem;"><%= product.name %></h6>
                            <p class="card-text text-primary fw-bold mb-2" style="font-size: 0.9rem;">â‚± <%= product.price %></p>

                            <div class="actions">
                                <div class="quantity">
                                    <button type="button" class="decrease-qty-btn btn btn-outline-secondary btn-sm">-</button>
                                    <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 40px;">
                                    <button type="button" class="increase-qty-btn btn btn-outline-secondary btn-sm">+</button>
                                </div>
                                <button type="submit" class="">Add to cart</button>
                            </div>

                            <input type="hidden" name="product_id" value="<%= product.id %>">
                        </div>
                    </div>
                </form>
            <% }) %>
        </div>
    </div>
    <div id="cart-container" class="container">
        <%- render_product_on_cart %>
    </div>
    <div id="image_modal" class="modal">
        <div class="modal-content">
            <img src="" alt="">
        </div>
    </div>
</body>
</html>