<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .modal {
            display: none; /* Hidden by default */
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            }

            .modal-content {
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            }

            .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            }

            .close:hover,
            .close:focus {
            color: black;
            text-decoration: none;
            }
    </style>
    <title>Homepage</title>
    <link rel="stylesheet" href="/vendors/css/bootstrap.css">
    <script src="/vendors/js/jquery.js"></script>
    <script src="/customs/js/index.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function(){
            $(".image_card").on("click", function(){
                $("#myModal .modal-content img").attr("src", $(this).attr("src"))
                $("#myModal").fadeIn()
            })

            $("#myModal .close").on("click", function(){
                $("#myModal").fadeOut()
            })
        })
    </script>
    <style>
        input[type=number]::-webkit-inner-spin-button, 
        input[type=number]::-webkit-outer-spin-button { 
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            margin: 0; 
        }
        input[type=number] {
            -moz-appearance: textfield;
            text-align: center;
        }
        p{
            display: inline-block;
            vertical-align: top;
            width: 50%;
        }
        p.text-primary{
            text-align: right;
        }

        .actions, .quantity{
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>
<body>
    <%- include("partials/header") %>
    <div id="products-container" class="container">
        <div class="row g-4">
            <% products.forEach(product => { %>
                <form action="/products/add-to-cart" method="POST" class="add-to-cart-form col">
                    <div class="card h-100">
                        <img src="/images/<%= product.image_path %>" class="card-img-top img-fluid image_card" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <p class="card-title text-truncate" style="font-size: 0.85rem;"><%= product.name %></h6>
                            <p class="card-text text-primary fw-bold mb-2" style="font-size: 0.9rem;">â‚±<%= product.price %></p>

                            <div class="actions">
                                <div class="quantity">
                                    <button type="button" class="decrease-qty-btn btn btn-outline-secondary btn-sm">-</button>
                                    <input type="number" name="quantity" value="1" min="1" class="form-control form-control-sm mx-1" style="width: 40px;">
                                    <button type="button" class="increase-qty-btn btn btn-outline-secondary btn-sm">+</button>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm">Add</button>
                            </div>

                            <input type="hidden" name="product_id" value="<%= product.id %>">
                        </div>
                    </div>
                </form>
            <% }) %>
        </div>
    </div>
    <div id="myModal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
            <img src="" alt="">
        </div>
      </div>
</body>
</html>